<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_payment_form_appointment" model="ir.ui.view">
        <field name="account.payment.form.appointment"></field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_payment" type="object" class="oe_stat_button" icon="fa-calendar">
                    <div class="o_stat_info">
                        <field name="payment_count" class="o_stat_value"/>
                        <span class="o_stat_text">Payment</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>